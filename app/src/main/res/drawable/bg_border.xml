<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="45"
                android:centerColor="#FFE600"
                android:endColor="#FFB800"
                android:startColor="#FFA800" />
                <corners
                    android:radius="20dp">
                </corners>
        </shape>
    </item>
    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <!-- fill the inside in the color you want (could also be a gradient again if you want to, just change solid to gradient and enter angle, start, maybe center, and end color) -->
            <gradient
                android:angle="-45"
                android:endColor="#FAF7E2"
                android:startColor="#FFFBE4" />

            <corners
                android:radius="17dp">
            </corners>
        </shape>
    </item>

</layer-list>
