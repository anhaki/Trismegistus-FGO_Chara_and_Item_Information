<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAEA"
    android:paddingTop="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="30dp"
            >
    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="35sp"
        android:fontFamily="@font/gowun"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:id="@+id/Rl_haki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:layout_below="@id/tv_judul"
        android:padding="20dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_nama_haki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M. Anugrah Hakiki"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:fontFamily="@font/gowun"
            android:textColor="@color/black"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/npm_haki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[2125250059]"
            android:layout_below="@id/tv_nama_haki"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:fontFamily="@font/gowun"
            android:textColor="@color/black"

            />
        <LinearLayout
            android:id="@+id/ll_bungkus_haki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/npm_haki"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_border"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/foto_haki"
                android:theme="@style/circleImageView"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Rv_HPandAtk_haki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_bungkus_haki"
            android:layout_centerHorizontal="true"
            android:layoutDirection="ltr"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Hp  : 80/100"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:fontFamily="@font/gowun"
                android:textColor="@color/black"
                android:layout_weight=".50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="Atk : 77/100"
                android:textSize="16sp"
                android:fontFamily="@font/gowun"
                android:textColor="@color/black"
                android:layout_weight=".50"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_haki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:layout_below="@id/Rv_HPandAtk_haki"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FFB800"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:layout_below="@id/Rl_haki"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_nama_wahyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wahyu Aji Nurrahman"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:fontFamily="@font/gowun"
            android:textColor="@color/black"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/npm_wahyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[2125250070]"
            android:layout_below="@id/tv_nama_wahyu"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:fontFamily="@font/gowun"
            android:textColor="@color/black"

            />
        <LinearLayout
            android:id="@+id/ll_bungkus_wahyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/npm_wahyu"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_border"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/foto_wahyu"
                android:theme="@style/circleImageView"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Rv_HPandAtk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_bungkus_wahyu"
            android:layout_centerHorizontal="true"
            android:layoutDirection="ltr"
            >

            <TextView
                android:id="@+id/tv_detailServantBaseHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Hp  : 994/100"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:fontFamily="@font/gowun"
                android:textColor="@color/black"
                android:layout_weight=".50"
                />
            <TextView
                android:id="@+id/tv_detailServantBaseAtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:text="Atk : 998/100"
                android:textSize="16sp"
                android:fontFamily="@font/gowun"
                android:textColor="@color/black"
                android:layout_weight=".50"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_wahyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:layout_below="@id/Rv_HPandAtk"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FFB800"/>


    </RelativeLayout>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>