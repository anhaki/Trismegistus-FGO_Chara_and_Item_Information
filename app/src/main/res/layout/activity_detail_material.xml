<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailMaterialActivity"
    android:background="#FFFAEA"
    android:padding="25dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp">

    <ImageView
        android:id="@+id/iv_materialIcon"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_materialName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_materialName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="35sp"
        android:fontFamily="@font/gowun"
        android:textColor="@color/black"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_materialIcon">

        <TextView
            android:id="@+id/tv_materialDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Detail"
            android:textSize="20sp"
            android:fontFamily="@font/gowun"
            android:textColor="@color/black"
            />

    </ScrollView>

    </RelativeLayout>

</RelativeLayout>